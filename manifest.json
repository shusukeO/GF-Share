{
    "name": "GFShare",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "You can share your answer in Google Forms before send.",
    "permissions": [
        "tabs",
        "declarativeContent",
        "https://docs.google.com/"
    ],
    "content_scripts": [{
        "matches": ["https://docs.google.com/forms/*/viewform"],
        "js": [
          "content.js"
        ]
    }],
    
    "page_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_title": "copy your answer",
        "default_popup": "./popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    }

}